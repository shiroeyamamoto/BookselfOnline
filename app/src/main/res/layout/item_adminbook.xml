<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:id="@+id/item_book_admin_layout"
    >
    <ImageView
        android:id="@+id/imgAdminBook"
        android:layout_width="64dp"
        android:layout_height="74dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/adminBookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Nguyen Van A"
        app:layout_constraintStart_toEndOf="@id/imgAdminBook"
        tools:layout_editor_absoluteY="0dp" />



    <TextView
        android:id="@+id/adminPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="12"
        app:layout_constraintStart_toEndOf="@id/imgAdminBook"
        app:layout_constraintTop_toBottomOf="@id/adminBookName"

        />

</androidx.constraintlayout.widget.ConstraintLayout>